{
  "name": "worbli",
  "version": "1.0.0",
  "description": "worbli",
  "author": "worbli",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "cd build && prpl-server --root . --config polymer.json --port 8080 && cd ../",
    "build": "polymer build",
    "lint": "npm run lint:javascript",
    "lint:javascript": "eslint . --ext js,html --ignore-path .eslintignore",
    "test": "polymer test",
    "docker": "npm run dockerBuild && npm run dockerRun",
    "dockerBuild": "polymer build && docker build -t worbli .",
    "dockerRun": "docker run --name worbli -p 80:8080 -d worbli",
    "test:integration": "polymer build"
  },
  "dependencies": {
    "@polymer/app-layout": "^3.0.2",
    "@polymer/app-route": "^3.0.0-pre.15",
    "@polymer/iron-pages": "^3.0.0-pre.15",
    "@polymer/iron-selector": "^3.0.1",
    "@polymer/polymer": "^3.0.0",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "polymer-redux": "^2.0.0-beta.2",
    "prpl-server": "^1.4.0",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.13.0",
    "eslint-config-google": "^0.12.0",
    "polymer-cli": "^1.7.1",
    "wct-browser-legacy": "^1.0.0"
  },
  "engines": {
    "node": ">=8.0"
  },
  "main": "ecosystem.config.js"
}
